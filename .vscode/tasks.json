{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Add database migration",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "ef",
                "migrations",
                "add",
                "-p",
                "Almostengr.PetFeeder.BackEnd/",
                "--context",
                "PetFeederDbContext",
                "-o",
                "${workspaceFolder}/Almostengr.PetFeeder.BackEnd/Migrations",
                "${input:migrationName}"
            ],
            "group": "none",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Update database",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "ef",
                "database",
                "update",
                "-p",
                "Almostengr.PetFeeder.BackEnd/",
                "--context",
                "PetFeederDbContext",
            ],
            "group": "none",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
        },
        {
            "label": "Remove migration",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "ef",
                "migrations",
                "remove",
                "${input:migrationName}",
                "-p",
                "Almostengr.PetFeeder.BackEnd/",
                "--context",
                "PetFeederDbContext",
            ],
            "group": "none",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type" : "shell",
            "args": [
                "watch",
                "-p",
                "Almostengr.PetFeeder.BackEnd/",
                "run"
            ],
            "group": "none",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
        },
        {
            "label": "Tag Release",
            "command" : "git",
            "type": "shell",
            "args": [
                "tag",
                "-a",
                "\"v$(date +%Y.%m.%d)\"",
                "-m",
                "\"version $(date +%Y.%m.%d)\""
            ],
            "dependsOn": ["Publish release"],
        },
    ],
    "inputs": [
        {
            "id": "migrationName",
            "type": "promptString",
            "description": "Enter the name for the database migration"
        }
    ]
}
