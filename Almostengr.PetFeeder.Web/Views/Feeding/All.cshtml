@model List<FeedingDto>
@{
    var sortedModel = Model.OrderByDescending(m => m.Created);
}

<h1>All Feedings</h1>

@if (Model.Count > 0)
{
    <div class="row">
        <div class="col bg-dark text-white">Date/Time</div>
        <div class="col bg-dark text-white">Scheduled</div>
    </div>

    @foreach (var item in sortedModel)
    {
        string wasScheduled = item.ScheduleId > 0 ? "Yes" : "No";

        <div class="row">
            <div class="col px-1">@item.Created</div>
            <div class="col px-1">@wasScheduled</div>
        </div>
    }
}
else {
    <h2 class="text-center">No feedings have occurred.</h2>
}