@model List<FeedingViewModel>

<h1>Latest Feedings</h1>

<div class="row">
    <div class="col-10">
        <a class="nav-link text-dark" asp-area="" asp-controller="feeding" asp-action="all">All Feedings</a>
    </div>
    <div class="col-2">
        <form method="POST" action="/feedings">
            <input type="hidden" name="ScheduleId" id="ScheduleId" value="0" />
            <button type="submit" id="submit" class="btn btn-primary">Feed Now</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-2 bg-dark text-white">Date/Time</div>
</div>

@foreach (var item in Model)
{
    string wasScheduled = item.ScheduleId > 0 ? "Yes" : "No";

    <div class="row">
    <div class="col-2 px-1">@item.Timestamp</div>
    <div class="col-2 px-1">@wasScheduled</div>
</div>
}
