@model IList<AlarmDto>

<h1>All Alarms</h1>

@if (Model.Count > 0)
{
    <div class="row">
    <div class="col bg-dark text-white">Date/Time</div>
    <div class="col bg-dark text-white">Message</div>
    <div class="col bg-dark text-white">Active</div>
    <div class="col bg-dark text-white">Actions</div>
</div>

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col px-1">@item.Created</div>
            <div class="col px-1">@item.Message</div>
            <div class="col px-1">@item.IsActive</div>
            <div class="col px-1">
                @* todo dismiss alert when clicked *@
                <form>
                    <input type="hidden" name="IsActive" value="false" />
                    <button class="btn btn-primary">Dismiss</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <h2 class="text-center">No feedings have occurred.</h2>
}