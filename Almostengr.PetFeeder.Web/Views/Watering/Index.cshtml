@model List<WateringViewModel>

<div class="row pb-3">
    <div class="col-10">
        <h1>Latest Watering</h1>
    </div>
    <div class="col-2 text-right">
        <a href="/watering/all"><button type="submit" id="submit" class="btn btn-secondary">All</button></a>
    </div>
</div>

@if (Model.Count > 0)
{
    <div class="row">
    <div class="col bg-dark text-white">Date/Time</div>
    </div>

    @foreach (var item in Model)
    {
        <div class="row">
        <div class="col px-1">@item.WateringTime</div>
        </div>
    }
}
else
{
    <h2 class="text-center">No waterings have occurred.</h2>
}