@model List<Watering>

<h1>All Waterings</h1>

@if (Model.Count > 0)
{
    <div class="row">
    <div class="col bg-dark text-white">Date/Time</div>
    <div class="col bg-dark text-white">Amount</div>
    </div>

    @foreach (var item in Model)
    {
        <div class="row">
        <div class="col px-1">@item.Created</div>
        <div class="col px-1">@item.Amount</div>
        </div>
    }
}
else
{
    <h2 class="text-center">No waterings have occurred.</h2>
}